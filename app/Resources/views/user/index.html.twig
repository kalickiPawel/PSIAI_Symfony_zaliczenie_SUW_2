{% extends './admin_profile/index.html.twig' %}
{% block users %}
<div class="container">
    <div class="row">
        <div class="col-sm">
            <h4>Users list</h4>
            <table class="users">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.username }}</a></td>
                            <td>{{ user.email }}</td>
                            <td>
                                <a href="{{ path('user_edit', { 'id': user.id }) }}" class="btn btn-primary">edit access</a>
                                <a href="{{ path('user_show', { 'id': user.id }) }}" class="btn btn-danger">delete</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
</div>
{% endblock %}
