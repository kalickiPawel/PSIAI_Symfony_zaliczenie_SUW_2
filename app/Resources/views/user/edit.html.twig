{% extends './admin_profile/index.html.twig' %}
{% block lecture %}
    <h4>Edit access {{user.username}}</h4>
    <table class="lectures">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Access</th>
            </tr>
        </thead>
        <tbody>
        {{ form_start(edit_form) }}
        {% for lecture in lectures %}
            <tr>
                <td><a href="{{ path('lecture_show', { 'id': lecture.id }) }}">{{ lecture.id }}</a></td>
                <td>{{ lecture.name }}</td>
                <td>
                    {# form_widget(access) #}
                    {# user.id #}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        {{ form_widget(edit_form) }}
        <input class="btn btn-primary" type="submit" value="Edit" />
    {{ form_end(edit_form) }}

    
    <a class="btn btn-danger" href="{{ path('user_index') }}">Back to the list</a>

{% endblock %}
